<% if user_signed_in? %>
  <%= @user.id %><br>
  <%= @user.email %><br>
  <%= @user.postal_code %><br>
  <%= @user.prefecture_code %><br>
  <%= @user.city %><br>
  <%= @user.street %><br>
  <%= @user.other_address %><br>
  <%= @user.self_introduction %><br>
  フォロー数: <%= link_to @user.followings.count, followings_user_path(@user) %><br>
  フォロワー数: <%= link_to @user.followers.count, followers_user_path(@user) %><br>
  <% if @user.user_icon.attached? %>
    <%= image_tag @user.user_icon.variant(resize: "100x100") %><br>
  <% end %>
  <% unless @user == current_user %>
    <% if current_user.following?(@user) %>
      <%= link_to "フォロー外す", user_follow_relationships_path(@user.id), method: :delete %>
    <% else %>
      <%= link_to "フォローする", user_follow_relationships_path(@user.id), method: :post %>
    <% end %>
  <% end %>
  <div>
    <%= link_to t('views.translate.back'), :back %>
  </div>  
<% end %>
